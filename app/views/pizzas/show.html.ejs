<div class="hero-unit">
  <h2 class="id"><%= pizza.id %></h2>
  <%- linkTo('Edit this pizza', editPizzaPath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Pizza Properties</h2>
<% for(var i in pizza) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= pizza[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>